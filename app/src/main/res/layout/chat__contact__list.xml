<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="projact.finalprojact.projact.Chat_Contact_List"
    android:background="#ffffffff">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_contect_list"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:focusable="false"
        android:textIsSelectable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/ct_bc_2_mnu"
        style="@style/AppTheme"
        android:background="#ffe5e9db" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ct_bc_2_mnu"
        android:background="@android:drawable/ic_menu_revert"
        android:textColor="#ffffa26f"
        android:backgroundTintMode="src_over"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView3"
        android:background="@drawable/chat"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/chat_contect_list" />

</RelativeLayout>
